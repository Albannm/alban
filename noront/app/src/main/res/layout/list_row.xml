<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_image_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note Title"
        android:id="@+id/list_item_note_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_item_image_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_note_message"
        android:text="So this is how a note body is gonna look like, we hope it will work ok!"
        android:layout_below="@id/list_item_note_title"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/list_item_image_icon"
        android:ellipsize="end"
        android:singleLine="true"
        />
</LinearLayout>